<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ManageUserServerLet</servlet-name>
        <servlet-class>controller.ManageUserServerLet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveUserServerlet</servlet-name>
        <servlet-class>controller.RemoveUserServerlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterUserServerlet</servlet-name>
        <servlet-class>controller.RegisterUserServerlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageUserView</servlet-name>
        <servlet-class>view.ManageUserView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageOrderServlet</servlet-name>
        <servlet-class>controller.ManageOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderView</servlet-name>
        <servlet-class>view.OrderView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeStatusServlet</servlet-name>
        <servlet-class>controller.ChangeStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageUserServerLet</servlet-name>
        <url-pattern>/ManageUserServerLet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveUserServerlet</servlet-name>
        <url-pattern>/RemoveUserServerlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterUserServerlet</servlet-name>
        <url-pattern>/RegisterUserServerlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageUserView</servlet-name>
        <url-pattern>/ManageUserView</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageOrderServlet</servlet-name>
        <url-pattern>/ManageOrderServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderView</servlet-name>
        <url-pattern>/OrderView</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeStatusServlet</servlet-name>
        <url-pattern>/ChangeStatusServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
